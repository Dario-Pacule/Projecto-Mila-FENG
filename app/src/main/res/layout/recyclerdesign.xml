<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="750dp"
        android:layout_height="96dp"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_relatory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_outline_settings_ethernet_80"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_text_relatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/menuHome"
                android:textColor="@color/black"
                android:textSize="32sp"
                app:layout_constraintStart_toEndOf="@+id/icon_relatory"
                app:layout_constraintTop_toTopOf="@+id/icon_relatory" />

            <TextView
                android:id="@+id/data_text_relatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Data: 12/12/2021"
                android:textColor="@color/corDescricao"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/icon_relatory"
                app:layout_constraintTop_toBottomOf="@+id/title_text_relatory" />

            <TextView
                android:id="@+id/hora_text_relatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Hora: 12:45"
                android:textColor="@color/corDescricao"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/data_text_relatory"
                app:layout_constraintTop_toBottomOf="@+id/title_text_relatory" />

            <TextView
                android:id="@+id/duracao_text_relatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Duração: 12 min"
                android:textColor="@color/corDescricao"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/hora_text_relatory"
                app:layout_constraintTop_toBottomOf="@+id/title_text_relatory" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>